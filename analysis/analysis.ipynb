import pyodpm

run = pyodpm.G4Run([1, 2], pyodpm.G4DATASET_DIR)
run.initializeWater(32, 32, 32, 1)
run.initializeGeometry()
reference = run.Run("e-", pyodpm.ThreeVector_d(0., 0., 0.), pyodpm.ThreeVector_d(0., 0., 1.), 6*pyodpm.MeV, 1000)
geometry = run.convertGeometry()
dpm_run = pyodpm.Run(42)
beam = pyodpm.ElectronPencilBeam(pyodpm.ThreeVector_d(0., 0., 0.), pyodpm.ThreeVector_d(0., 0., 1.), 6*pyodpm.MeV)
pyodpm.simulate(dpm_run, run, geometry, beam, 1000)
pyodpm.validate(reference, geometry)
geometry_array = pyodpm.toNdArray(geometry)
reference_array = pyodpm.toNdArray(reference)
print(geometry_array.shape)
print(reference_array.shape)